<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- ===== BLANK HOME SCREEN ===== -->

    <!-- ===== SIDE PANEL (Just Log Out button) ===== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nu_needs_homebg">

        <!-- Burger Button -->
        <ImageView
            android:id="@+id/BTN_Burger"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.039"
            app:srcCompat="@drawable/burger_button" />

        <!-- Logo -->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/nu_needs_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="269dp"
            android:layout_height="52dp"
            android:fontFamily="@font/barlow"
            android:text="Welcome to NU Needs!"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.166" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_MCategory"
            android:layout_width="297dp"
            android:layout_height="250dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Manage Category"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.413" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BTN_MProduct"
            android:layout_width="297dp"
            android:layout_height="250dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/barlow"
            android:text="Manage Product"
            android:textSize="25dp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.823" />

        <TextView
            android:id="@+id/TV_Today"
            android:layout_width="323dp"
            android:layout_height="35dp"
            android:fontFamily="@font/barlow"
            android:text="What are we managing today?"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.647"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.271" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/side_panel"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:translationX="-250dp">

        <!-- Empty space at top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- LOG OUT BUTTON -->
        <Button
            android:id="@+id/BTN_Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#6372d8"
            android:paddingVertical="20dp"
            android:paddingHorizontal="16dp" />

    </LinearLayout>
</FrameLayout>