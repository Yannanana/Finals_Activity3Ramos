<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nu_needs_homebg">

    <!-- LOGO -->

    <!-- HOME BUTTON -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nu_needs_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <!-- PAPER RECEIPT -->

    <ImageView
        android:id="@+id/BTN_Home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <FrameLayout
        android:id="@+id/receiptContainer"
        android:layout_width="340dp"
        android:layout_height="540dp"
        android:background="@drawable/paperreceipt"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintBottom_toTopOf="@id/BTN_Download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <!-- SCROLLABLE CONTENT -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <!-- CONTENT HOLDER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="70dp"
                android:paddingBottom="24dp">

                <!-- USER NAME -->
                <TextView
                    android:id="@+id/TV_Successful"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow"
                    android:text="Successful!"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edward Manaloto"
                    android:fontFamily="@font/barlow"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <!-- PURPOSE -->
                <TextView
                    android:id="@+id/tvPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NU Clark / BSIT Department"
                    android:fontFamily="@font/barlow"
                    android:textSize="17sp"
                    android:layout_marginBottom="12dp"/>

                <!-- ORDER INFO -->
                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order #: 000 | Date: 2026-02-10"
                    android:fontFamily="@font/barlow"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp"/>

                <!-- ITEMS LABEL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:fontFamily="@font/barlow"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>

                <!-- ITEMS LIST -->
                <LinearLayout
                    android:id="@+id/itemsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginVertical="8dp"/>

                <!-- TOTAL -->
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: â‚±0.00"
                    android:fontFamily="@font/barlow"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- DOWNLOAD BUTTON -->
    <Button
        android:id="@+id/BTN_Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:backgroundTint="@color/button"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
